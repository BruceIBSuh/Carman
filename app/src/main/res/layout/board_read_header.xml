<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/header_comment"
    android:layout_width="match_parent"
    android:layout_height="35dp"
    android:background="@drawable/bg_colored_border"
    android:gravity="center_vertical"
    android:layout_margin="3dp"
    android:padding="3dp" >
    <TextView
        android:id="@+id/tv_comment_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="3dp"
        android:gravity="center_vertical"
        android:text="@string/board_comment_header"
        android:textSize="@dimen/subtitle"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/header_comment_cnt"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="8dp"
        android:layout_toEndOf="@id/tv_comment_label"
        android:gravity="start|center_vertical"
        android:text="@null"
        android:textColor="@android:color/holo_blue_light"
        android:textSize="@dimen/subtitle" />
    <androidx.appcompat.widget.SwitchCompat
        style="@style/BoardSwitchCompat"
        android:id="@+id/switch_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true" />
</RelativeLayout>