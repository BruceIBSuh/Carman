<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.GeneralFragment">

    <Spinner
        android:id="@+id/spinner_fuel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="3dp"
        android:layout_marginBottom="3dp"
        android:background="@android:color/darker_gray"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@+id/view_boxing"
        app:layout_constraintEnd_toEndOf="parent" />

    <com.silverback.carman2.views.OpinetAvgPriceView
        android:id="@+id/avgPriceView"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/bg_colored_border"
        android:gravity="center"
        android:padding="5dp"
        app:avgPriceDown="@color/priceDown"
        app:avgPriceUp="@color/priceUp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_subtitle_region"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:gravity="center_vertical"
        android:text="@string/general_subtitle_region"
        android:textSize="@dimen/largeText"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/avgPriceView"
        app:layout_constraintTop_toTopOf="@+id/avgPriceView" />

    <View
        android:id="@+id/view_boxing"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="3dp"
        android:layout_marginTop="3dp"
        android:background="@color/subBorder"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/avgPriceView"
        app:layout_constraintTop_toBottomOf="@+id/tv_subtitle_region" />

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/pager_price"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="3dp"
        android:padding="2dp"
        app:layout_constraintBottom_toBottomOf="@+id/avgPriceView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tv_subtitle_region"
        app:layout_constraintTop_toBottomOf="@+id/tv_subtitle_region" />

    <View
        android:id="@+id/view_subtitle_expense"
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"
        android:background="@drawable/bg_colored_border"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/avgPriceView" />

    <TextView
        android:id="@+id/tv_expenses_sort"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="@string/general_expense_gas"
        app:layout_constraintBottom_toBottomOf="@+id/tv_subtitle_exp"
        app:layout_constraintStart_toEndOf="@+id/tv_subtitle_exp"
        app:layout_constraintTop_toTopOf="@+id/tv_subtitle_exp" />

    <TextView
        android:id="@+id/tv_subtitle_exp"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginStart="5dp"
        android:gravity="center_vertical"
        android:text="@string/general_subtitle_expense"
        android:textSize="@dimen/subtitle"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/view_subtitle_expense"
        app:layout_constraintTop_toTopOf="@+id/view_subtitle_expense"
        app:layout_constraintBottom_toBottomOf="@+id/view_subtitle_expense" />

    <ImageButton
        android:id="@+id/imgbtn_expense"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginEnd="8dp"
        android:background="@android:color/transparent"
        android:src="@drawable/state_btn_rotate"
        android:contentDescription="@null"
        android:scaleType="fitXY"
        app:layout_constraintTop_toTopOf="@+id/view_subtitle_expense"
        app:layout_constraintBottom_toBottomOf="@+id/view_subtitle_expense"
        app:layout_constraintEnd_toEndOf="@+id/view_subtitle_expense" />

    <TextView
        android:id="@+id/tv_label_exp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_subtitle_expense" />

    <TextView
        android:id="@+id/tv_exp_stmts"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_label_exp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_label_exp"
        app:layout_constraintTop_toTopOf="@+id/tv_label_exp" />

    <View
        android:id="@+id/view_subtitle_stations"
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/bg_colored_border"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_label_exp" />

    <TextView
        android:id="@+id/tv_subtitle_stations"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:gravity="center_vertical"
        android:text="@string/general_subtitle_stations"
        android:textSize="@dimen/subtitle"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/view_subtitle_stations"
        app:layout_constraintTop_toTopOf="@+id/view_subtitle_stations"
        app:layout_constraintBottom_toBottomOf="@+id/view_subtitle_stations"/>

    <TextView
        android:id="@+id/tv_stations_order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:gravity="center_vertical"
        android:text="@string/general_stations_distance"
        app:layout_constraintStart_toEndOf="@+id/tv_subtitle_stations"
        app:layout_constraintTop_toTopOf="@+id/view_subtitle_stations"
        app:layout_constraintBottom_toBottomOf="@+id/view_subtitle_stations" />

    <ImageButton
        android:id="@+id/imgbtn_stations"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginEnd="8dp"
        android:background="@android:color/transparent"
        android:src="@drawable/state_btn_rotate"
        android:contentDescription="@null"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="@+id/view_subtitle_stations"
        app:layout_constraintBottom_toBottomOf="@+id/view_subtitle_stations"
        app:layout_constraintTop_toTopOf="@+id/view_subtitle_stations" />

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/frame_recyclerview"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="3dp"
        android:layout_marginEnd="3dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_subtitle_stations">

        <TextView
            android:id="@+id/tv_no_stations"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />

        <ProgressBar
            android:id="@+id/listProgress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_relocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:src="@android:drawable/ic_menu_mylocation"
            android:visibility="invisible"
            app:backgroundTint="@color/colorAccent"
            app:borderWidth="0dp"
            app:elevation="6dp"
            app:layout_anchor="@id/stationRecyclerView"
            app:layout_anchorGravity="right|bottom"
            app:rippleColor="@color/colorPrimary" />

        <com.silverback.carman2.views.StationRecyclerView
            android:id="@+id/stationRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:fab="@id/fab_relocation"
            app:progressbar="@id/listProgress"
            app:textview="@id/tv_no_stations" />

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</androidx.constraintlayout.widget.ConstraintLayout>