<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinatorLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context="com.silverback.carman2.ExpenseActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collapsingToolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            app:contentScrim="?attr/colorPrimary"
            app:titleEnabled="false"
            app:layout_scrollFlags="scroll|enterAlways|exitUntilCollapsed" >

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/board_toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/bgToolbar"
                android:elevation="2dp"
                app:titleTextColor="#FFFFFF"
                app:layout_collapseMode="pin" />

            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tab_board"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="?attr/actionBarSize"
                app:tabBackground="@android:color/darker_gray"
                app:tabIndicatorColor="@android:color/holo_orange_dark"
                app:tabIndicatorHeight="5dp"
                app:tabSelectedTextColor="@android:color/tab_indicator_text"
                app:tabTextAppearance="@style/CustomTabText"
                app:tabTextColor="@android:color/white"
                app:layout_collapseMode="parallax" />

            <HorizontalScrollView
                android:id="@+id/post_scroll_horizontal"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@android:color/darker_gray"
                android:scrollbarSize="1dp"
                app:layout_collapseMode="parallax"  >

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/pager_cl_filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:textColor="#D8D8D8"
                    app:elevation="1dp" >

                    <TextView
                        android:id="@+id/tv_label_category"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/board_post_filter_title"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent" />

                    <CheckBox
                        android:id="@+id/chkbox_filter_maker"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:checked="true"
                        app:layout_constraintBottom_toBottomOf="@+id/tv_label_category"
                        app:layout_constraintStart_toEndOf="@+id/tv_label_category"
                        app:layout_constraintTop_toTopOf="@+id/tv_label_category" />

                    <CheckBox
                        android:id="@+id/chkbox_filter_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        app:layout_constraintBottom_toBottomOf="@+id/tv_label_category"
                        app:layout_constraintStart_toEndOf="@+id/chkbox_filter_maker"
                        app:layout_constraintTop_toTopOf="@+id/tv_label_category" />

                    <CheckBox
                        android:id="@+id/chkbox_filter_model"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        app:layout_constraintBottom_toBottomOf="@+id/tv_label_category"
                        app:layout_constraintStart_toEndOf="@+id/chkbox_filter_type"
                        app:layout_constraintTop_toTopOf="@+id/tv_label_category" />

                    <CheckBox
                        android:id="@+id/chkbox_filter_year"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        app:layout_constraintBottom_toBottomOf="@+id/tv_label_category"
                        app:layout_constraintStart_toEndOf="@+id/chkbox_filter_model"
                        app:layout_constraintTop_toTopOf="@+id/tv_label_category" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </HorizontalScrollView>





        </com.google.android.material.appbar.CollapsingToolbarLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical"
        android:fillViewport="true"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

        <androidx.viewpager.widget.ViewPager
            android:visibility="gone"
            android:id="@+id/viewpager_board"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </androidx.core.widget.NestedScrollView>

    <ProgressBar style="@android:style/Widget.Holo.Light.ProgressBar.Large"
        android:id="@+id/progbar_board"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_centerInParent="true" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>