<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".fragments.InputPadFragment">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/defaultValue"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/bg_colored_border"
        android:gravity="center_vertical|end"
        android:paddingEnd="5dp"
        android:text="TextView"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/unit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:text="unit"
        app:layout_constraintBottom_toBottomOf="@+id/defaultValue"
        app:layout_constraintStart_toEndOf="@+id/defaultValue"
        app:layout_constraintTop_toTopOf="@+id/defaultValue" />


    <com.silverback.carman2.views.InputBtnPadView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/unit"
        app:layout_constraintStart_toEndOf="@+id/unit"
        app:layout_constraintTop_toTopOf="@+id/unit" />

</androidx.constraintlayout.widget.ConstraintLayout>