<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    tools:context=".NotificationActivity">

    <TextView
        android:id="@+id/tv_label_mileage"
        android:layout_width="102dp"
        android:layout_height="22dp"
        android:layout_marginTop="16dp"
        android:text="Mileage: "
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_label_payment" />

    <TextView
        android:id="@+id/tv_label_payment"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:text="Payment: "
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/et_noti_mileage"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:ems="10"
        android:inputType="text"
        app:layout_constraintBottom_toBottomOf="@+id/tv_label_payment"
        app:layout_constraintStart_toEndOf="@+id/tv_label_payment"
        app:layout_constraintTop_toTopOf="@+id/tv_label_payment" />

    <EditText
        android:id="@+id/et_noti_payment"
        android:layout_width="200dp"
        android:layout_height="25dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="text"
        app:layout_constraintStart_toStartOf="@+id/et_noti_mileage"
        app:layout_constraintTop_toBottomOf="@+id/et_noti_mileage" />
</androidx.constraintlayout.widget.ConstraintLayout>