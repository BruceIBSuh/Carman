<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinatorLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context="com.silverback.carman2.ExpenseActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collapsingToolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true"
            app:expandedTitleGravity="top|end"
            app:expandedTitleMarginEnd="0dp"
            app:expandedTitleMarginStart="48dp"
            app:expandedTitleMarginTop="10dp"
            app:contentScrim="?attr/colorPrimary"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:title="Hello World"
            app:titleEnabled="false" >

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@android:color/holo_blue_dark"
                android:elevation="3dp"
                android:fitsSystemWindows="true"
                app:layout_collapseMode="pin"

                app:titleTextColor="#fb9000" />

            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tabLayout"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="bottom"
                android:alpha="0.5"
                android:padding="0dp"
                app:tabBackground="@android:color/background_dark"
                app:tabIndicatorColor="@android:color/holo_orange_dark"
                app:tabIndicatorHeight="3dp"
                app:tabSelectedTextColor="@android:color/holo_orange_dark"
                app:tabTextAppearance="@style/CustomTabText"
                app:tabTextColor="@android:color/background_light"
                app:layout_collapseMode="parallax">

            </com.google.android.material.tabs.TabLayout>

            <RelativeLayout
                android:id="@+id/frameLayout_pager_expense"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:orientation="vertical"
                android:fillViewport="true"
                app:layout_collapseMode="parallax" >


                <androidx.viewpager.widget.ViewPager
                    android:id="@+id/viewPager_expense"
                    android:layout_width="match_parent"
                    android:layout_alignTop="@id/indicator"
                    android:layout_height="100dp"
                    android:layout_gravity="bottom"/>

                <com.silverback.carman2.utils.CustomPagerIndicator
                    android:id="@+id/indicator"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_gravity="bottom"
                    android:gravity="center" />

            </RelativeLayout>



        </com.google.android.material.appbar.CollapsingToolbarLayout>

    </com.google.android.material.appbar.AppBarLayout>



    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical"
        android:fillViewport="true"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <FrameLayout
                android:id="@+id/frameLayout_viewPager"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>

