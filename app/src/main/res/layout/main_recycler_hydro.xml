<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <ImageView
        android:id="@+id/iv_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@null"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/presence_online" />

    <TextView
        android:id="@+id/tv_hydro_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_status"
        app:layout_constraintStart_toEndOf="@+id/iv_status"
        app:layout_constraintTop_toTopOf="@+id/iv_status" />

    <TextView
        android:id="@+id/tv_hydro_addrs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@+id/tv_hydro_name"
        app:layout_constraintTop_toBottomOf="@+id/tv_hydro_name" />

    <TextView
        android:id="@+id/tv_label_chgrnum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/main_hydro_chgr_num"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toStartOf="@+id/tv_hydro_addrs"
        app:layout_constraintTop_toBottomOf="@+id/tv_hydro_addrs" />

    <TextView
        android:id="@+id/tv_hydro_chgrnum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_label_chgrnum"
        app:layout_constraintStart_toEndOf="@+id/tv_label_chgrnum"
        app:layout_constraintTop_toTopOf="@+id/tv_label_chgrnum" />

    <TextView
        android:id="@+id/tv_label_bizhour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="@string/main_hydro_bizhour"
        app:layout_constraintBottom_toBottomOf="@+id/tv_hydro_chgrnum"
        app:layout_constraintEnd_toStartOf="@+id/tv_hydro_bizhour"
        app:layout_constraintTop_toTopOf="@+id/tv_hydro_chgrnum" />

    <TextView
        android:id="@+id/tv_hydro_bizhour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/tv_label_bizhour"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_label_bizhour" />

    <TextView
        android:id="@+id/tv_hydro_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/tv_hydro_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_hydro_name" />

    <TextView
        android:id="@+id/tv_hydro_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/tv_hydro_addrs"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_hydro_addrs" />

    <TextView
        android:id="@+id/tv_label_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="@string/general_station_distance"
        app:layout_constraintBottom_toBottomOf="@+id/tv_hydro_distance"
        app:layout_constraintEnd_toStartOf="@+id/tv_hydro_distance"
        app:layout_constraintTop_toTopOf="@+id/tv_hydro_distance" />

</androidx.constraintlayout.widget.ConstraintLayout>