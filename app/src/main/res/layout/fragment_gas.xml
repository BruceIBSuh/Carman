<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minWidth="100dp"
    tools:context="com.silverback.carman2.fragments.GasManagerFragment">


    <TextView
        android:id="@+id/tv_subtitle_gas_expense"
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:layout_marginStart="3dp"
        android:layout_marginEnd="3dp"
        android:background="@drawable/bg_colored_border"
        android:gravity="start|center"
        android:padding="5dp"
        android:text="@string/gas_subtitle_expense"
        android:textSize="@dimen/subtitle"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/tv_label_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:minWidth="80dp"
        android:text="@string/gas_label_date"
        android:textSize="@dimen/largeText"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_subtitle_gas_expense" />

    <TextView
        android:id="@+id/tv_date_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toEndOf="@+id/tv_label_date"
        app:layout_constraintTop_toBottomOf="@+id/tv_subtitle_gas_expense" />

    <Button
        android:id="@+id/button2"
        android:layout_width="30dp"
        android:layout_height="19dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:padding="0dp"
        app:layout_constraintStart_toEndOf="@+id/tv_date_time"
        app:layout_constraintTop_toBottomOf="@+id/tv_subtitle_gas_expense" />

    <TextView
        android:id="@+id/tv_label_station"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:minWidth="80dp"
        android:labelFor="@id/et_station"
        android:text="@string/gas_label_station"
        android:textSize="@dimen/largeText"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/tv_label_date"
        app:layout_constraintTop_toBottomOf="@+id/tv_label_date" />

    <EditText
        android:id="@+id/et_station"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/state_view_focus"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toStartOf="@+id/et_unit_price"
        app:layout_constraintStart_toEndOf="@+id/tv_label_station"
        app:layout_constraintTop_toBottomOf="@+id/tv_label_date"
        tools:ignore="AutoFill" />

    <EditText
        android:id="@+id/et_unit_price"
        android:layout_width="65dp"
        android:layout_height="28dp"
        android:layout_marginEnd="3dp"
        android:background="@drawable/state_view_focus"
        android:gravity="center"
        android:hint="@string/liter_price"
        android:inputType="number"
        android:textSize="13sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/et_station"
        tools:ignore="Autofill" />

    <TextView
        android:id="@+id/tv_label_odometer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:minWidth="80dp"
        android:labelFor="@id/et_mileage"
        android:text="@string/gas_label_odometer"
        android:textSize="@dimen/largeText"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/tv_label_date"
        app:layout_constraintTop_toBottomOf="@+id/tv_label_station" />

    <EditText
        android:id="@+id/et_mileage"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/state_view_focus"
        android:ems="10"
        android:inputType="number"
        tools:ignore="AutoFill"
        app:layout_constraintStart_toEndOf="@+id/tv_label_odometer"
        app:layout_constraintTop_toBottomOf="@+id/tv_label_station" />

    <TextView
        android:id="@+id/tv_unit_km"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:text="@string/unit_km"
        app:layout_constraintStart_toEndOf="@+id/et_mileage"
        app:layout_constraintTop_toBottomOf="@+id/tv_label_station" />

    <TextView
        android:id="@+id/tv_label_payment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:minWidth="80dp"
        android:labelFor="@id/et_payment"
        android:text="@string/gas_label_expense_gas"
        android:textSize="@dimen/largeText"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/tv_label_date"
        app:layout_constraintTop_toBottomOf="@+id/tv_label_odometer" />

    <EditText
        android:id="@+id/et_payment"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/state_view_focus"
        android:ems="10"
        android:inputType="number"
        tools:ignore="AutoFill"
        app:layout_constraintStart_toEndOf="@+id/tv_label_payment"
        app:layout_constraintTop_toBottomOf="@+id/tv_label_odometer" />

    <TextView
        android:id="@+id/tv_unit_won"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:text="@string/unit_won"
        app:layout_constraintStart_toEndOf="@+id/et_payment"
        app:layout_constraintTop_toBottomOf="@+id/tv_label_odometer" />

    <TextView
        android:id="@+id/tv_label_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:minWidth="80dp"
        android:labelFor="@id/et_amount"
        android:text="@string/gas_label_amount"
        android:textSize="@dimen/largeText"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/tv_label_date"
        app:layout_constraintTop_toBottomOf="@+id/tv_label_payment" />

    <EditText
        android:id="@+id/et_amount"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/state_view_focus"
        android:ems="10"
        android:inputType="number"
        tools:ignore="AutoFill"
        app:layout_constraintStart_toEndOf="@+id/tv_label_amount"
        app:layout_constraintTop_toBottomOf="@+id/tv_label_payment" />

    <TextView
        android:id="@+id/tv_unit_liter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:text="@string/unit_liter"
        app:layout_constraintStart_toEndOf="@+id/et_amount"
        app:layout_constraintTop_toBottomOf="@+id/tv_label_payment" />

    <TextView
        android:id="@+id/tv_subtitle_extra"
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:layout_marginStart="3dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="3dp"
        android:background="@drawable/bg_colored_border"
        android:padding="5dp"
        android:text="@string/gas_subtitle_extra_expense"
        android:textSize="@dimen/subtitle"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_label_amount" />

    <TextView
        android:id="@+id/textView18"
        android:layout_width="wrap_content"
        android:layout_height="21dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:minWidth="80dp"
        android:labelFor="@id/et_wash"
        android:text="@string/gas_label_expense_wash"
        android:textSize="@dimen/largeText"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_subtitle_extra" />

    <EditText
        android:id="@+id/et_wash"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="number"
        android:background="@drawable/state_view_focus"
        tools:ignore="AutoFill"
        app:layout_constraintStart_toEndOf="@+id/textView18"
        app:layout_constraintTop_toBottomOf="@+id/tv_subtitle_extra" />

    <TextView
        android:id="@+id/tv_wash_unit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:text="@string/unit_won"
        app:layout_constraintStart_toEndOf="@+id/et_wash"
        app:layout_constraintTop_toBottomOf="@+id/tv_subtitle_extra"
        tools:text="@string/unit_won" />


    <TextView
        android:id="@+id/textView19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:minWidth="80dp"
        android:labelFor="@id/et_extra"
        android:text="@string/gas_label_expense_misc"
        android:textSize="@dimen/largeText"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/textView18"
        app:layout_constraintTop_toBottomOf="@+id/textView18" />

    <EditText
        android:id="@+id/et_extra"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="number"
        android:background="@drawable/state_view_focus"
        tools:ignore="AutoFill"
        app:layout_constraintStart_toEndOf="@+id/textView19"
        app:layout_constraintTop_toBottomOf="@+id/textView18" />


    <TextView
        android:id="@+id/tv_extra_unit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:text="@string/unit_won"
        app:layout_constraintStart_toEndOf="@+id/et_extra"
        app:layout_constraintTop_toBottomOf="@+id/textView18"
        tools:text="@string/unit_won" />

    <TextView
        android:id="@+id/textView22"
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:layout_marginStart="3dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="3dp"
        android:background="@drawable/bg_colored_border"
        android:padding="5dp"
        android:text="@string/gas_subtitle_evaluation"
        android:textSize="@dimen/subtitle"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView19" />

    <TextView
        android:id="@+id/textView24"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:minWidth="80dp"
        android:text="@string/gas_label_evaluation"
        android:textSize="@dimen/largeText"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView22" />

    <RatingBar
        android:id="@+id/ratingBar"
        android:layout_width="wrap_content"
        android:layout_height="49dp"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toEndOf="@+id/textView24"
        app:layout_constraintTop_toBottomOf="@+id/textView22" />

    <TextView
        android:id="@+id/tv_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:labelFor="@id/et_comment"
        android:text="@string/gas_label_comment"
        android:textSize="@dimen/largeText"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/textView24"
        app:layout_constraintTop_toBottomOf="@+id/textView24" />

    <EditText
        android:id="@+id/et_comment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:minHeight="100dp"
        android:layout_margin="8dp"
        android:padding="5dp"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        android:background="@drawable/state_view_focus"
        tools:ignore="AutoFill"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_comment" />


</androidx.constraintlayout.widget.ConstraintLayout>