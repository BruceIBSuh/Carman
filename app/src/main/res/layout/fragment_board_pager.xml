<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coord_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.BoardPagerFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_board"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_insetEdge="top" />

    <ProgressBar style="?android:attr/progressBarStyleSmall"
        android:visibility="invisible"
        android:id="@+id/progbar_paging"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_gravity="center|bottom"
        android:background="@android:color/transparent"
        app:elevation="2dp"
        app:layout_insetEdge="bottom" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_board_write"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:src="@android:drawable/ic_menu_mylocation"
        android:layout_gravity="end|bottom"
        app:borderWidth="0dp"
        app:elevation="6dp"
        app:backgroundTint="@color/colorAccent"
        app:rippleColor="@color/colorPrimary" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>