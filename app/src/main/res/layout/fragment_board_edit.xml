<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_board_edit"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <View
        android:id="@+id/view_edit_header"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/bgBoardTab"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_label_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="@string/boardwrite_label_title"
        android:labelFor="@id/et_board_write_title"
        app:layout_constraintBottom_toBottomOf="@+id/view_edit_header"
        app:layout_constraintStart_toStartOf="@+id/view_edit_header"
        app:layout_constraintTop_toTopOf="@+id/view_edit_header" />

    <EditText
        android:id="@+id/et_board_write_title"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:background="@null"
        android:ems="10"
        android:inputType="textMultiLine"
        android:textSize="@dimen/mediumText"
        android:textColor="#0080FF"
        app:layout_constraintBottom_toBottomOf="@+id/tv_label_title"
        app:layout_constraintEnd_toStartOf="@+id/btn_attach_image"
        app:layout_constraintStart_toEndOf="@+id/tv_label_title"
        app:layout_constraintTop_toTopOf="@+id/tv_label_title"
        tools:ignore="autofill" />

    <Button
        android:id="@+id/btn_attach_image"
        android:layout_width="30dp"
        android:layout_height="25dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/btn_attach_image"
        android:textSize="@dimen/smallText"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/et_board_write_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/et_board_write_title" />


    <EditText
        android:id="@+id/et_edit_content"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="8dp"
        android:gravity="start|top"
        android:background="@null"
        android:hint="@null"
        android:inputType="textMultiLine"
        android:textSize="@dimen/smallText"
        android:textColor="#0080FF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_edit_header"
        app:layout_constraintBottom_toTopOf="@+id/vg_recycler_images"
        tools:ignore="autofill" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/vg_recycler_images"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
