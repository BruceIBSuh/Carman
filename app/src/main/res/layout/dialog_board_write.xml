<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinatorLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context="com.silverback.carman2.BoardWritingActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/vg_constraint_top"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:elevation="2dp">

        <ImageButton
            android:id="@+id/btn_dismiss"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:background="@android:drawable/btn_dialog"
            android:contentDescription="@null"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/btn_upload"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:background="@android:drawable/ic_menu_save"
            android:contentDescription="@null"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>


    <HorizontalScrollView
        android:id="@+id/scrollview_horizontal"
        android:layout_width="match_parent"
        android:layout_height="37dp"
        app:layout_insetEdge="top">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/vg_constraint_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="1dp"
            android:padding="8dp">

            <CheckBox
                android:id="@+id/chkbox_general"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="General"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

            <CheckBox
                android:id="@+id/chkbox_maker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Automaker"
                app:layout_constraintBottom_toBottomOf="@+id/chkbox_general"
                app:layout_constraintStart_toEndOf="@+id/chkbox_general"
                app:layout_constraintTop_toTopOf="@+id/chkbox_general"
                app:layout_constraintVertical_bias="0.0" />

            <CheckBox
                android:id="@+id/chkbox_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="AutoType"
                app:layout_constraintBottom_toBottomOf="@+id/chkbox_maker"
                app:layout_constraintStart_toEndOf="@+id/chkbox_maker"
                app:layout_constraintTop_toTopOf="@+id/chkbox_maker" />

            <CheckBox
                android:id="@+id/chkbox_model"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="AutoModel"
                app:layout_constraintBottom_toBottomOf="@+id/chkbox_type"
                app:layout_constraintStart_toEndOf="@+id/chkbox_type"
                app:layout_constraintTop_toTopOf="@+id/chkbox_type" />

            <CheckBox
                android:id="@+id/chkbox_year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="AutoYear"
                app:layout_constraintBottom_toBottomOf="@+id/chkbox_model"
                app:layout_constraintStart_toEndOf="@+id/chkbox_model"
                app:layout_constraintTop_toTopOf="@+id/chkbox_model" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </HorizontalScrollView>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="vertical"
        android:elevation="1dp"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior"
        app:layout_dodgeInsetEdges="top" >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/vg_constraint_body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">

            <TextView
                android:id="@+id/tv_label_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:labelFor="@id/et_board_title"
                android:text="@string/boardwrite_label_title"
                android:textSize="@dimen/mediumText"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/et_board_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:background="@null"
                android:ems="10"
                android:inputType="textMultiLine"
                android:textSize="@dimen/mediumText"
                app:layout_constraintBottom_toBottomOf="@+id/tv_label_title"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/tv_label_title"
                app:layout_constraintTop_toTopOf="@+id/tv_label_title"
                tools:ignore="autofill" />

            <EditText
                android:id="@+id/et_board_body"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:minHeight="100dp"
                android:layout_marginTop="16dp"
                android:background="@null"
                android:ems="10"
                android:gravity="top"
                android:hint="write here"
                android:inputType="textMultiLine"
                android:textSize="@dimen/mediumText"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/et_board_title"
                tools:ignore="autofill" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/vg_recycler_images"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/et_board_body" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

    <RelativeLayout
        android:id="@+id/vg_relative_attach"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:gravity="center_vertical"
        android:background="#E0FFFF"
        android:elevation="2dp"
        app:layout_anchor="@id/nestedScrollView"
        app:layout_anchorGravity="bottom|end">

        <Button
            android:id="@+id/btn_attach_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="8dp"
            android:text="Attach"
            android:textStyle="bold"
            android:textSize="@dimen/smallText" />

    </RelativeLayout>


</androidx.coordinatorlayout.widget.CoordinatorLayout>