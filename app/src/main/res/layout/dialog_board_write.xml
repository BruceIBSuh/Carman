<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinatorLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:fitsSystemWindows="false"
    tools:context="com.silverback.carman2.fragments.BoardWriteDlgFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar_board_write"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collapsingToolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            android:gravity="start"
            app:contentScrim="?attr/colorPrimary"
            app:titleEnabled="false"
            app:layout_scrollFlags="scroll|enterAlways|exitUntilCollapsed" >

            <androidx.appcompat.widget.Toolbar
                android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                android:id="@+id/toolbar_board_write"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/bgToolbar"
                android:elevation="2dp"
                app:contentInsetLeft="8dp"
                app:contentInsetStart="8dp"
                app:titleMarginStart="16dp"
                app:titleTextColor="#FFFFFF"
                app:navigationIcon="?homeAsUpIndicator"
                app:layout_collapseMode="pin" />

            <HorizontalScrollView
                android:id="@+id/scrollview_horizontal"
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:layout_marginTop="?attr/actionBarSize"
                android:background="@android:color/darker_gray"
                android:scrollbarSize="1dp"
                app:layout_collapseMode="parallax"  >

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/vg_constraint_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:textColor="#D8D8D8"
                    app:elevation="1dp" >

                    <TextView
                        android:id="@+id/tv_label_category"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/board_write_category"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent" />

                    <CheckBox
                        android:id="@+id/chkbox_maker"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        app:layout_constraintBottom_toBottomOf="@+id/tv_label_category"
                        app:layout_constraintStart_toEndOf="@+id/tv_label_category"
                        app:layout_constraintTop_toTopOf="@+id/tv_label_category"
                        app:layout_constraintVertical_bias="0.0" />

                    <CheckBox
                        android:id="@+id/chkbox_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        app:layout_constraintBottom_toBottomOf="@+id/chkbox_maker"
                        app:layout_constraintStart_toEndOf="@+id/chkbox_maker"
                        app:layout_constraintTop_toTopOf="@+id/chkbox_maker" />

                    <CheckBox
                        android:id="@+id/chkbox_model"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        app:layout_constraintBottom_toBottomOf="@+id/chkbox_type"
                        app:layout_constraintStart_toEndOf="@+id/chkbox_type"
                        app:layout_constraintTop_toTopOf="@+id/chkbox_type" />

                    <CheckBox
                        android:id="@+id/chkbox_year"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        app:layout_constraintBottom_toBottomOf="@+id/chkbox_model"
                        app:layout_constraintStart_toEndOf="@+id/chkbox_model"
                        app:layout_constraintTop_toTopOf="@+id/chkbox_model" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </HorizontalScrollView>

        </com.google.android.material.appbar.CollapsingToolbarLayout>

    </com.google.android.material.appbar.AppBarLayout>


    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="1dp"
        android:fillViewport="true"
        android:scrollbars="vertical"
        app:layout_dodgeInsetEdges="top"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/vg_constraint_body"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="50dp"
            android:padding="8dp">

            <TextView
                android:id="@+id/tv_label_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginTop="8dp"
                android:labelFor="@id/et_board_title"
                android:text="@string/boardwrite_label_title"
                android:textSize="@dimen/mediumText"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/et_board_title"
                android:layout_width="0dp"
                android:layout_height="25dp"
                android:layout_marginStart="16dp"
                android:background="@null"
                android:ems="10"
                android:inputType="textMultiLine"
                android:padding="3dp"
                android:textSize="@dimen/mediumText"
                app:layout_constraintBottom_toBottomOf="@+id/tv_label_title"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/tv_label_title"
                app:layout_constraintTop_toTopOf="@+id/tv_label_title"
                tools:ignore="autofill" />

            <View
                android:id="@+id/view_underline"
                android:layout_width="0dp"
                android:layout_height="3dp"
                android:layout_marginTop="8dp"
                android:background="#F5F5F5"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_label_title" />


            <EditText
                android:id="@+id/et_board_body"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:minHeight="200dp"
                android:layout_marginTop="8dp"
                android:gravity="start|top"
                android:background="@null"
                android:hint="@null"
                android:inputType="textMultiLine"
                android:padding="0dp"
                android:textSize="@dimen/smallText"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/view_underline"
                tools:ignore="autofill" />


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/vg_recycler_images"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/et_board_body"
                app:layout_constraintVertical_bias="0.8" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

    <RelativeLayout
        android:id="@+id/vg_relative_attach"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_gravity="bottom"
        android:gravity="center_vertical"
        android:background="#F5F5F5"
        android:elevation="1dp"
        app:layout_insetEdge="bottom">

        <Button
            android:id="@+id/btn_attach_image"
            android:layout_width="30dp"
            android:layout_height="25dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="8dp"
            android:background="@drawable/btn_attach_image"
            android:textStyle="bold"
            android:textSize="@dimen/smallText" />

    </RelativeLayout>


</androidx.coordinatorlayout.widget.CoordinatorLayout>